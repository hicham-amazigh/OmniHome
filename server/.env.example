# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=OmniHome API

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Database Settings
