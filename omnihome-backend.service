[Unit]
Description=OmniHome Backend Server
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/app/OmniHome/server
Environment="PATH=/app/OmniHome/server/venv/bin"
ExecStart=/app/OmniHome/server/venv/bin/python main.py
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/app/OmniHome/server

[Install]
WantedBy=multi-user.target
